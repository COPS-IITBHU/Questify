            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="5dp">


                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="10dp"
                    android:paddingRight="13dp"
                    android:text="Create An Event (Admins Only)"
                    android:textColor="@android:color/background_dark"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/view13"
                    style="@style/Divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@android:color/background_dark" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:theme="@style/EditTextHintForNotifCreator"
                    custom:errorTextAppearance="@style/error_appearance"
                    custom:hintTextAppearance="@style/EditTextHintForNotifCreator">

                    <EditText
                        android:id="@+id/event_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:hint="Event Name"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_color_light" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:theme="@style/EditTextHintForNotifCreator"
                    custom:errorTextAppearance="@style/error_appearance"
                    custom:hintTextAppearance="@style/EditTextHintForNotifCreator">

                    <EditText
                        android:id="@+id/event_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:hint="Event Subtitle"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_color_light" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:theme="@style/EditTextHintForNotifCreator"
                    custom:errorTextAppearance="@style/error_appearance"
                    custom:hintTextAppearance="@style/EditTextHintForNotifCreator">

                    <EditText
                        android:id="@+id/event_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:hint="Event Description"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_color_light" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:theme="@style/EditTextHintForNotifCreator"
                    custom:errorTextAppearance="@style/error_appearance"
                    custom:hintTextAppearance="@style/EditTextHintForNotifCreator">

                    <EditText
                        android:id="@+id/event_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:hint="Event Image URL"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_color_light" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:theme="@style/EditTextHintForNotifCreator"
                    custom:errorTextAppearance="@style/error_appearance"
                    custom:hintTextAppearance="@style/EditTextHintForNotifCreator">

                    <EditText
                        android:id="@+id/event_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:hint="Event Location"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_color_light" />


                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="Streams :-"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/stream_box_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                </LinearLayout>

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="Tags :-"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/tag_box_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                </LinearLayout>

                <!--<Button-->
                <!--android:id="@+id/btn_create_event1"-->
