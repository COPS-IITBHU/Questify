<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorPrimary"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.ChooseEvent"
    tools:showIn="@layout/activity_choose_event">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Choose Event"
            android:textSize="24sp" />

        <View
            android:id="@+id/view"
            style="@style/Divider1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <RadioGroup
            android:id="@+id/events_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

        </RadioGroup>

        <Button
            android:id="@+id/btn_event_reg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_register"
            android:elevation="2dp"
            android:gravity="center"
            android:text="Proceed"
            android:textColor="@color/register_background"
            android:textSize="14dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>